@model dynamic

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="pull-right" style="font-size: 80%;">
                    <a href="#">Forgot password?</a>
                </div>
                <div class="panel-title">@ViewBag.Title</div>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" method="POST">
                    <div class="input-group" style="margin-bottom: 10px;">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username">
                    </div>

                    <div class="input-group" style="margin-bottom: 10px;">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                    </div>

                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="login-remember" type="checkbox" name="isPersistent" value="1"> Remember me
                            </label>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 10px;">
                        <div class="col-sm-12">
                            <input class="btn btn-success" type="submit" name="submit.Signin" value="Login" />
                            <input class="btn btn-primary" type="submit" name="submit.External" value="Login with Google" />
                        </div>
                    </div>
                </form>
            </div>

            <div class="panel-footer">
                Don't have an account! <a href="#">Sign Up Here</a>
            </div>
        </div>
    </div>
</div>